<mui:ModernWindow x:Class="Frobnicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:local="clr-namespace:Frobnicator"
        mc:Ignorable="d"
        Title="Frobnicator" Height="350" Width="525">
    
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Playback" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Play" Source="/Pages/Playback.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Setup" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="MIDI" Source="/Pages/MidiSetup.xaml" />
                <mui:Link DisplayName="Audio" Source="/Pages/AudioSetup.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
