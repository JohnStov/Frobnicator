<UserControl x:Class="Frobnicator.Pages.MidiSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frobnicator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <TextBlock HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="88" Text="MIDI In Device" Height="22"/>
        <ComboBox HorizontalAlignment="Left" Margin="88,10,0,0" VerticalAlignment="Top" Width="170" ItemsSource="{Binding DeviceNames}" SelectedIndex="{Binding SelectedItem}"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Width="88" Text="Manufacturer" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="88,35,0,0" VerticalAlignment="Top" Width="170" Text="{Binding SelectedManufacturer}" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top" Width="88" Text="Product Id" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="88,60,0,0" VerticalAlignment="Top" Width="170" Text="{Binding SelectedProductId}" Height="22"/>
    </Grid>
</UserControl>
