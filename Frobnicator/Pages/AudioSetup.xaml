<UserControl x:Class="Frobnicator.Pages.AudioSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frobnicator.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="119*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="0,12,0,0" VerticalAlignment="Top" Width="100" Text="Audio Out Device" Height="22"/>
        <ComboBox HorizontalAlignment="Left" Margin="1,12,0,0" VerticalAlignment="Top" Width="237" ItemsSource="{Binding DeviceNames}" SelectedIndex="{Binding SelectedItem}" Grid.Column="1" Height="22"/>
    </Grid>
</UserControl>
